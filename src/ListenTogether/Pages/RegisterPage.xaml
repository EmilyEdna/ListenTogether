<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListenTogether.Pages.RegisterPage"
             Title="注册"
             BackgroundColor="{AppThemeBinding Dark={StaticResource DarkBackground},Light={StaticResource LightBackground}}">

    <StackLayout Margin="{OnPlatform UWP=16,MacCatalyst=16,Android='10,5,10,5',iOS='10,5,10,5'}"
                 MaximumWidthRequest="{OnPlatform  UWP=500,MacCatalyst=500}">

        <StackLayout Margin="0,0,0,20"
                     Orientation="Horizontal"
                     VerticalOptions="Start">
            <Label Text="新用户注册"
                   VerticalTextAlignment="Center"
                   Style="{StaticResource Title}"/>
            <ActivityIndicator Margin="10,0,0,0"
                               IsRunning="{Binding IsBusy}"
                               HeightRequest="20"
                               WidthRequest="20"
                               VerticalOptions="CenterAndExpand"/>
        </StackLayout>

        <StackLayout>
            <Entry Text="{Binding Username}"
                   Placeholder="请输入用户名"
                   ReturnType="Next"
                   Margin="0,10,0,10"/>
            <Entry Text="{Binding Nickname}"
                   Placeholder="请输入昵称"
                   ReturnType="Next"
                   Margin="0,0,0,10"/>
            <Entry Text="{Binding Password}"
                   Placeholder="密码"
                   ReturnType="Next"
                   IsPassword="True"
                   Margin="0,0,0,10"/>
            <Entry Text="{Binding Password2}"
                   Placeholder="确认密码"
                   ReturnType="Next"
                   IsPassword="True"
                   Margin="0,0,0,10"/>
            <HorizontalStackLayout Margin="0,0,0,10">
                <Label Text="头像"
                   VerticalTextAlignment="Center"
                   Margin="0,0,10,0"/>
                <Image Source="{Binding MyImage}"
                   WidthRequest="48"
                   Margin="0,0,10,0"/>
                <Button Text="选择"
                        IsEnabled="{Binding IsNotBusy}"
                        Command="{Binding ChoseImageCommand}"
                        BackgroundColor="{AppThemeBinding Dark={StaticResource DarkBtnBackground},Light={StaticResource LightBtnBackground}}"
                        TextColor="{AppThemeBinding Dark={StaticResource DarkBtnText},Light={StaticResource LightBtnText}}"/>
            </HorizontalStackLayout>

            <Label Text="{Binding ApiMessage}"
                   Margin="0,10,0,0"/>

            <Button Text="注册"
                    Margin="0,20,0,0"
                    IsEnabled="{Binding IsNotBusy}"
                    Command="{Binding RegisterCommand}"
                    BackgroundColor="{AppThemeBinding Dark={StaticResource DarkBtnBackground},Light={StaticResource LightBtnBackground}}"
                    TextColor="{AppThemeBinding Dark={StaticResource DarkBtnText},Light={StaticResource LightBtnText}}"/>
        </StackLayout>
    </StackLayout>
</ContentPage>