<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListenTogether.Controls.Player">

    <ContentView.Content>
        <ContentView x:Name="MainBlock">
            <OnPlatform x:TypeArguments="View">
                <On Platform="UWP, macOS">
                    <Grid>
                        <Line
                            Stroke="{StaticResource PlayingPageLine}"
                            X2="4000" />
                        <StackLayout 
                            Orientation="Horizontal"
                            Margin="{OnPlatform UWP=16,MacCatalyst=16,Android='10,10,10,0',iOS='10,10,10,0'}">
                            <StackLayout 
                                HorizontalOptions="Start"
                                Orientation="Horizontal"
                                WidthRequest="250">

                                <Image 
                                    x:Name="ImgCurrentMusic"
                                    HorizontalOptions="Start"
                                    WidthRequest="60">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="GoToPlayingPage_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                                <StackLayout 
                                    Margin="10,0,0,0"
                                    HorizontalOptions="FillAndExpand">
                                    <Label 
                                        x:Name="LblMusicName"
                                        Margin="0,10,0,0"
                                        VerticalOptions="Start"
                                        LineBreakMode="TailTruncation"/>
                                    <Label 
                                        x:Name="LblMusicArtistAndAlbum"
                                        Margin="0,0,0,10"
                                        VerticalOptions="EndAndExpand"
                                        Style="{StaticResource ExplainFontSize}"
                                        LineBreakMode="TailTruncation"/>
                                    <Label 
                                        x:Name="LblMusicArtist"
                                        IsVisible="False"/>
                                </StackLayout>

                            </StackLayout>
                            <StackLayout HorizontalOptions="CenterAndExpand"
                                             MaximumWidthRequest="450">

                                <!--播放按钮-->
                                <StackLayout Orientation="Horizontal" 
                                                 HorizontalOptions="Center"
                                                 Spacing="28" >

                                    <Image x:Name="ImgRepeat"
                                               WidthRequest="20"
                                               HeightRequest="20"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"
                                               Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="ImgRepeat_Tapped"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image 
                                        x:Name="ImgBack"
                                        WidthRequest="20"
                                        HeightRequest="20"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Previous_Tapped"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image x:Name="ImgPlay"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center"
                                               Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="ImgPlay_Tapped"></TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image 
                                        x:Name="ImgNext"
                                        WidthRequest="20"
                                        HeightRequest="20"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Next_Tapped"/>
                                        </Image.GestureRecognizers>
                                    </Image>

                                    <Image 
                                        x:Name="ImgOther"
                                        WidthRequest="20"
                                        HeightRequest="20"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Aspect="AspectFill">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Puzzled_Tapped"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>

                                <!--进度条-->
                                <StackLayout
                                    Orientation="Horizontal"
                                    HeightRequest="30">
                                    <Label
                                        x:Name="LblPosition"
                                        TextColor="{Binding TextColor, Source={x:Reference LblMusicName}}"
                                        HorizontalOptions="Start"
                                        VerticalTextAlignment="Center"/>
                                    <Slider
                                        x:Name="SliderPlayProgress"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Center"
                                        Minimum="0"
                                        Maximum="1"
                                        Margin="10,0,10,0"
                                        DragStarted="SliderPlayProgress_DragStarted"
                                        DragCompleted="SliderPlayProgress_DragCompleted">
                                    </Slider>
                                    <Label
                                        x:Name="LblDuration"
                                        TextColor="{Binding TextColor, Source={x:Reference LblMusicName}}"
                                        HorizontalOptions="End"
                                        VerticalTextAlignment="Center"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout HorizontalOptions="End"
                                             Orientation="Horizontal"
                                             WidthRequest="250">

                                <Image x:Name="ImgSoundOff"
                                           VerticalOptions="Center"
                                           HorizontalOptions="EndAndExpand"
                                           HeightRequest="20"
                                           WidthRequest="20"
                                           Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ImgSoundOff_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Slider 
                                    x:Name="SliderVolume"
                                    Margin="10,0,20,0"
                                    WidthRequest="90"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center"
                                    Minimum="0"
                                    Maximum="100"
                                    MinimumTrackColor="{Binding MinimumTrackColor, Source={x:Reference SliderPlayProgress}}"
                                    MaximumTrackColor="{Binding MaximumTrackColor, Source={x:Reference SliderPlayProgress}}"
                                    ThumbColor="{Binding ThumbColor, Source={x:Reference SliderPlayProgress}}"
                                    ValueChanged="SliderVolume_ValueChanged"/>
                            </StackLayout>
                        </StackLayout>
                    </Grid>

                </On>
                <On Platform="Android,iOS">
                    <StackLayout Margin="10,5,10,5">
                        <!--迷你组件-->
                        <StackLayout 
                            x:Name="PhoneMiniPlayer"
                            Orientation="Horizontal">

                            <Image 
                                WidthRequest="30"
                                HorizontalOptions="Start"
                                Source="{Binding Source, Source={x:Reference ImgCurrentMusic}}">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GoToPlayingPage_Tapped"/>
                                </Image.GestureRecognizers>
                            </Image>

                            <Label 
                                Margin="5,0,0,0"
                                TextColor="{Binding TextColor, Source={x:Reference LblMusicName}}"
                                HorizontalOptions="Start"
                                VerticalTextAlignment="Center"
                                LineBreakMode="TailTruncation">
                                <MultiBinding StringFormat="{}{0} - {1}">
                                    <Binding Path="Text" Source="{x:Reference LblMusicName}"/>
                                    <Binding Path="Text" Source="{x:Reference LblMusicArtist}"/>
                                </MultiBinding>
                            </Label>

                            <ActivityIndicator
                                x:Name="PlayerLoading"
                                HorizontalOptions="StartAndExpand"
                                IsVisible="false"
                                IsRunning="True"
                                HeightRequest="20"
                                WidthRequest="20"/>

                            <Image 
                                WidthRequest="30"
                                HeightRequest="30"
                                Aspect="AspectFill"
                                HorizontalOptions="End"
                                Source="{Binding Source, Source={x:Reference ImgPlay}}">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="ImgPlay_Tapped"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </StackLayout>

                        <!--完整组件-->
                        <StackLayout x:Name="PhoneFullPlayer">
                            <!-- 进度条 -->
                            <StackLayout Orientation="Horizontal">
                                <Label 
                                    Text="{Binding Text, Source={x:Reference LblPosition}}"
                                    TextColor="{Binding TextColor, Source={x:Reference LblMusicName}}"
                                    HorizontalOptions="Start"                                    
                                    VerticalTextAlignment="Center"/>
                                <Slider 
                                    Margin="5,0,5,0"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="Center"
                                    Value="{Binding Value, Source={x:Reference SliderPlayProgress}}"
                                    Minimum="{Binding Minimum, Source={x:Reference SliderPlayProgress}}"
                                    Maximum="{Binding Maximum, Source={x:Reference SliderPlayProgress}}"
                                    MinimumTrackColor="{Binding MinimumTrackColor, Source={x:Reference SliderPlayProgress}}"
                                    MaximumTrackColor="{Binding MaximumTrackColor, Source={x:Reference SliderPlayProgress}}"
                                    ThumbColor="{Binding ThumbColor, Source={x:Reference SliderPlayProgress}}"
                                    DragStarted="SliderPlayProgress_DragStarted"
                                    DragCompleted="SliderPlayProgress_DragCompleted">
                                </Slider>
                                <Label 
                                    Text="{Binding Text, Source={x:Reference LblDuration}}"
                                    TextColor="{Binding TextColor, Source={x:Reference LblMusicName}}"
                                    HorizontalOptions="End"
                                    VerticalTextAlignment="Center"/>
                            </StackLayout>

                            <!-- 播放按钮 -->
                            <Grid ColumnDefinitions="*,*,*,*,*"
                                  Margin="0,5,0,10">
                                <Image Source="{Binding Source, Source={x:Reference ImgRepeat}}"
                                           Grid.Column="0"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ImgRepeat_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Source="{Binding Source, Source={x:Reference ImgBack}}"
                                           Grid.Column="1"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Previous_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Source="{Binding Source, Source={x:Reference ImgPlay}}"
                                           Grid.Column="2"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ImgPlay_Tapped"></TapGestureRecognizer>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Source="{Binding Source, Source={x:Reference ImgNext}}"
                                           Grid.Column="3"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Next_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>

                                <Image Source="{Binding Source, Source={x:Reference ImgOther}}"
                                           Grid.Column="4"
                                           WidthRequest="30"
                                           HeightRequest="30"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Aspect="AspectFill">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Puzzled_Tapped"/>
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </StackLayout>
                    </StackLayout>
                </On>
            </OnPlatform>
        </ContentView>
    </ContentView.Content>
</ContentView>